{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "tsc", "lint", "codegen"],
      "outputs": [".next/**", "dist/**"]
    },
    "build:storybook": {
      "dependsOn": ["build:storybook"],
      "outputs": ["storybook-static/**"]
    },
    "lint": {},
    "tsc": {
      "dependsOn": ["db:generate", "codegen"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "dev:storybook": {
      "dependsOn": ["build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
